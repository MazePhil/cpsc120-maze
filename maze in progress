#include <iostream>
using namespace std;

int main()
{
    int direct;
    
    const int x=4 ;
    const int i=9 ;
    char board[x][i+1] = { "** === **", "*       *", "*       *", "*** i ***" };
    for (int x=0; x<4;x++){
        for (int i=0;i<9;i++){
            cout<<board[x][i];
            
        }cout<<"\n";
    }
    
    cout << "Description how to move the i by using\n"
            "w: move the i up\n"
            "a: move the i left\n"
            "s: move the i down\n"
            "d: move the i right\n";
   
    cin >> direct;
    if(direct == 'w'){
        board[2][4]= board[3][4];
    }
    
    return 0;
    
}
