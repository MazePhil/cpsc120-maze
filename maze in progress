#include <iostream>
using namespace std;

const int rows=4 ;
const int columns=9 ;
char board[rows][columns+1] = { "** === **", "*       *", "*       *", "*** i ***" };

void print(){
    for (int x=0; x<rows;x++){
        for (int i=0;i<columns;i++){
            cout<<board[x][i];
            
        }cout<<"\n";
        
    }
}

int main()
{
    char direct;
    
    print();
    
    cout << "Description how to move the i by using\n"
    "w: move the i up\n"
    "a: move the i left\n"
    "s: move the i down\n"
    "d: move the i right\n";
    

    cin >> direct;
    for (int x=0; x<rows;x++){
        for (int i=0;i<columns;i++){
            if(direct == 'w'){
                char temp;
                temp=board[2][4];
                board[2][4]= board[3][4];
                board[3][4]=temp;
            }
         }
        
    }
   print();
    
   
    
    return 0;
    
}
